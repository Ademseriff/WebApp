@model Admin
@using WebApp.Models
@{
    ViewData["Title"] = "AdminEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-controller="Home" asp-action="AdminEkle">
    <div class="form-group">
        <label for="AdminName">ADINIZ</label>
        <input type="text" class="form-control" placeholder="Admin Ad" asp-for="AdminName">
    </div>

    <div class="form-group">
        <label for="AdminSifre">ŞİFRENİZ</label>
        <input type="text" class="form-control" placeholder="Admin Şifre" asp-for="AdminSifre">
    </div>
    <button type="submit" class="btn btn-primary">ADMİN EKLE</button>
</form>

